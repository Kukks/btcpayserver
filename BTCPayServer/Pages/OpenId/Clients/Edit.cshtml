                        "<span class='fa fa-times'></span>" +
                        "</button>" +
                        "</div>" +
                        "</div>" +
                        "</li>")
                    .insertBefore($(this).parent("li")).find("button").on("click", onRemoveLiButtonClicked);

            });
        $(".btn-redirect-uris-remove").on("click", onRemoveLiButtonClicked);

        $(".select-client-type").on("change",
            function() {
                switch ($(this).val()) {
                case "@OpenIddictConstants.ClientTypes.Public":
                    $("#Client_ClientId").hide();
                case "@OpenIddictConstants.ClientTypes.Hybrid":
                case "@OpenIddictConstants.ClientTypes.Confidential":
                    $("#Client_ClientId").show();
                default:
                }
            });

        function onRemoveLiButtonClicked() {
            $(this).parents("li").remove();
        }

        var initiallySelectedPermissions = $("#Client_Permissions").val();
        for (var i = 0; i < initiallySelectedPermissions.length; i++) {
            $(".cb-permissions[data-key='" + initiallySelectedPermissions[i] + "']").prop("checked", true);
        }


        $(".cb-permissions").on("change",
            function() {
                var key = $(this).data("key");
                var checked = $(this).is(":checked");

                var vals = $("#Client_Permissions").val();
                if (checked) {
                    vals.push(key);
                } else {
                    vals.splice(vals.indexOf(key), 1);
                }
                $("#Client_Permissions").val(vals);

            });
        $("#Client_Permissions").hide();
        $("#permissions-ui-js").show();
        $(".toggle-advanced-mode").show().on("click",
            function() {
                $(".advanced-mode").toggle();
            });
    })
</script>


