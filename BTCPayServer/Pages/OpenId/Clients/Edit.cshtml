@functions{


    public class EditClientModel : OpenIddictApplicationDescriptor
    {
        [Display(Name = "Reset Client Secret")]
        public bool ResetSecret { get; set; }


        [Display(Name = "Whitelisted urls to redirect to from interactive flows")]
        public ISet<Uri> RedirectUris { get; } = (ISet<Uri>) new HashSet<Uri>();

        [Display(Name = "Whitelisted urls to redirect to after logging out from interactive flows")]
        public ISet<Uri> PostLogoutRedirectUris { get; } = (ISet<Uri>) new HashSet<Uri>();
    }

    [Authorize]
    public class EditClient : PageModel
    {
        private readonly UserManager<ApplicationUser> _userManager;
        private readonly OpenIddictApplicationManager<BTCPayOpenIdClient> _applicationManager;
        private readonly BTCPayServerOptions _options;

        public bool ShowClientType
        {
            get { return _options.OpenIdOptions.EnforceGrantTypes; }
        }

        [BindProperty]
        public EditClientModel Client { get; set; }

        public List<SelectListItem> Permissions = new List<SelectListItem>();

        [BindProperty(SupportsGet = true)]
        public string Id { get; set; }

        [BindProperty(SupportsGet = true)]
        public string StatusMessage { get; set; }

        public EditClient(
            UserManager<ApplicationUser> userManager,
            OpenIddictApplicationManager<BTCPayOpenIdClient> applicationManager,
            BTCPayServerOptions options)
        {
            _userManager = userManager;
            _applicationManager = applicationManager;
            _options = options;
            PopulatePermissions();
        }

        public async Task<IActionResult> OnGetAsync()
        {
            Client = new EditClientModel();
            if (string.IsNullOrEmpty(Id)) return Page();
            var application = await _applicationManager.FindByIdAsync(Id);

            var userId = _userManager.GetUserId(User);
            if (application == null || application.ApplicationUserId != userId)
            {
                return NotFound();
            }
            await _applicationManager.PopulateAsync(Client, application);
            return Page();
        }


        private async Task<BTCPayOpenIdClient> ValidateApplication()
        {
    //            if (!_options.OpenIdOptions.EnforceGrantTypes && 
    //                !Client.Permissions.Any(s => s.StartsWith(OpenIddictConstants.Permissions.Prefixes.GrantType)))
    //            {
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.GrantTypes.Password);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.GrantTypes.Implicit);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.GrantTypes.AuthorizationCode);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.GrantTypes.ClientCredentials);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.GrantTypes.RefreshToken);
    //            }
    //
    //            if (!_options.OpenIdOptions.EnforceGrantTypes &&
    //                !Client.Permissions.Any(s => s.StartsWith(OpenIddictConstants.Permissions.Prefixes.Endpoint)))
    //            {
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.Endpoints.Token);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.Endpoints.Authorization);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.Endpoints.Introspection);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.Endpoints.Logout);
    //                Client.Permissions.Add(OpenIddictConstants.Permissions.Endpoints.Revocation);
    //            }


            if (string.IsNullOrEmpty(Id))
            {
                Client.ClientId = Guid.NewGuid().ToString();
            }

    //Sanitize list inputs
            Client.RedirectUris.Remove(null);
            Client.PostLogoutRedirectUris.Remove(null);
            Client.ConsentType = OpenIddictConstants.ConsentTypes.Implicit;
            var application = new BTCPayOpenIdClient();
            await _applicationManager.PopulateAsync(application, Client);

            var permissions = (await _applicationManager.GetPermissionsAsync(application)).ToList();

            ComputeClientType(permissions, application);

            if (application.Type == OpenIddictConstants.ClientTypes.Public)
            {
                application.ClientSecret = null;
            }
            await ValidateUrlArray("Client.RedirectUris", await _applicationManager.GetRedirectUrisAsync(application));

            await ValidateUrlArray("Client.PostLogoutRedirectUris", await _applicationManager.GetPostLogoutRedirectUrisAsync(application));


            if (permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.AuthorizationCode))
            {
                if (!permissions.Contains(OpenIddictConstants.Permissions.Endpoints.Authorization))
                {
                    permissions.Add(OpenIddictConstants.Permissions.Endpoints.Authorization);
                }
                if (!permissions.Contains(OpenIddictConstants.Permissions.Endpoints.Token))
                {
                    permissions.Add(OpenIddictConstants.Permissions.Endpoints.Token);
                }
            }

            if (permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.Implicit))
            {
                if (!permissions.Contains(OpenIddictConstants.Permissions.Endpoints.Authorization))
                {
                    permissions.Add(OpenIddictConstants.Permissions.Endpoints.Authorization);
                }
                if (!permissions.Contains(OpenIddictConstants.Permissions.Endpoints.Token))
                {
                    permissions.Add(OpenIddictConstants.Permissions.Endpoints.Token);
                }
            }
            if (permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.ClientCredentials))
            {
                if (!permissions.Contains(OpenIddictConstants.Permissions.Endpoints.Token))
                {
                    permissions.Add(OpenIddictConstants.Permissions.Endpoints.Token);
                }
                var userid = _userManager.GetUserId(User);
                var userScope = $"{OpenIddictConstants.Permissions.Prefixes.Scope}user:{userid}";
                permissions.Add(userScope);
            }
            if (permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.RefreshToken))
            {
                if (!permissions.Contains(OpenIddictConstants.Permissions.Endpoints.Token))
                {
                    permissions.Add(OpenIddictConstants.Permissions.Endpoints.Token);
                }
                if (!permissions.Contains(OpenIddictConstants.Scopes.OfflineAccess))
                {
                    permissions.Add(OpenIddictConstants.Scopes.OfflineAccess);
                }
            }
            else
            {
                permissions.Remove(OpenIddictConstants.Scopes.OfflineAccess);
            }
            if (permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.Password))
            {
                if (!permissions.Contains(OpenIddictConstants.Permissions.Endpoints.Token))
                {
                    permissions.Add(OpenIddictConstants.Permissions.Endpoints.Token);
                }
            }
            if (!permissions.Contains(OpenIddictConstants.Scopes.OpenId))
            {
                permissions.Add(OpenIddictConstants.Scopes.OpenId);
            }

            application.Permissions = new JArray(permissions).ToString(Formatting.None);
            await _applicationManager.PopulateAsync(Client, application);
            return application;
        }

        private void ComputeClientType(List<string> permissions, BTCPayOpenIdClient application)
        {
            var privateMethods = false;
            var publicMethods = false;
            if (permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.AuthorizationCode) ||
                permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.ClientCredentials))
            {
                privateMethods = true;
            }

            if (permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.Implicit) ||
                permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.RefreshToken) ||
                permissions.Contains(OpenIddictConstants.Permissions.GrantTypes.Password))
            {
                publicMethods = true;
            }

            application.Type = publicMethods && privateMethods ? OpenIddictConstants.ClientTypes.Hybrid :
                publicMethods && !privateMethods ? OpenIddictConstants.ClientTypes.Public :
                    OpenIddictConstants.ClientTypes.Confidential;
        }


        public async Task<IActionResult> OnPostAsync()
        {
            if (!ModelState.IsValid)
            {
                return Page();
            }
            try
            {
                var application = await ValidateApplication();
                if (ModelState.ErrorCount > 0)
                {
                    await _applicationManager.PopulateAsync(Client, application);
                    return Page();
                }

                if (!string.IsNullOrEmpty(Id))
                {
                    var userId = _userManager.GetUserId(User);
                    if (application == null || application.ApplicationUserId != userId || application.Id != Id || (await _applicationManager.FindByIdAsync(application.Id)).ApplicationUserId != userId)
                    {
                        return NotFound();
                    }


                    var secret = Client.ResetSecret &&
                                 application.Type != OpenIddictConstants.ClientTypes.Public ?
                        Guid.NewGuid().ToString() : null;
                    await _applicationManager.UpdateAsync(application, secret);

                    StatusMessage = $"Client saved successfully. {(!string.IsNullOrEmpty(secret) ? $"Client Secret is {secret}" : "")}";

                    return Page();
                }
                else
                {
                    application.ApplicationUserId = _userManager.GetUserId(User);
                    var secret = application.Type == OpenIddictConstants.ClientTypes.Public ? null : Guid.NewGuid().ToString();
                    await _applicationManager.CreateAsync(application, secret);

                    await _applicationManager.PopulateAsync(Client, application);
                    return RedirectToPage("./Edit", new {Id = application.Id, StatusMessage = $"Client Created successfully. {(!string.IsNullOrEmpty(secret) ? $"Client Secret is {secret}" : "")}"});
                }
            }
            catch (Exception e)
            {
                ModelState.AddModelError("", e.Message);
                return Page();
            }
        }


        private async Task ValidateUrlArray(string key, IEnumerable<string> uris)
        {
            var errors = new List<string>();

            foreach (var uri in uris)
            {
                if (string.IsNullOrEmpty(uri) && !errors.Contains("Callback URLs cannot be null or empty."))
                {
                    errors.Add("Callback URLs cannot be null or empty.");
                    continue;
                }
                if (!Uri.TryCreate(uri, UriKind.Absolute, out var result) || !result.IsWellFormedOriginalString())
                {
                    if (!errors.Contains("Callback URLs must be valid absolute URLs."))
                    {
                        errors.Add("Callback URLs must be valid absolute URLs.");
                    }
                    continue;
                }
                if (!string.IsNullOrEmpty(result.Fragment) && !errors.Contains("Callback URLs cannot contain a fragment."))
                {
                    errors.Add("Callback URLs cannot contain a fragment.");
                }
            }

            errors.ForEach(s => ModelState.AddModelError(key, s));
        }

